package com.projetobdd.userufs.controllers;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired; // Corrigindo importação
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.projetobdd.userufs.entities.User; // Corrigindo importação
import com.projetobdd.userufs.repositories.UserRepository;

@RestController
@RequestMapping(value = "/users")
public class UserController {

    @Autowired // Corrigindo anotação
    private UserRepository repository;

    @GetMapping
    public List<User> findAll() {
        List<User> result = repository.findAll();
        return result;
    }
}
